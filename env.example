# VietStock-style E-con News Portal Environment Variables

# Required: Gemini AI API Key for content analysis
# Get from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Required: Secret key for Flask sessions (generate a random string)
SECRET_KEY=your_secret_key_here

# Optional: Port (Render will set this automatically)
PORT=8080

# Optional: Python version
PYTHON_VERSION=3.11.0

# Development settings
FLASK_ENV=production
FLASK_DEBUG=False
